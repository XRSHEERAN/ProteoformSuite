<UserControl x:Class="ProteoWPFSuite.ClosingTabHeader"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProteoWPFSuite"
             mc:Ignorable="d" 
             d:DesignHeight="23" d:DesignWidth="81" Margin="0">
    <Grid>
        <Button Content="x"  HorizontalAlignment="Right" 

          x:Name="tab_close" VerticalAlignment="Top" Width="Auto" FontFamily="Leelawadee UI Semilight" 

          Style="{StaticResource {x:Static ToolBar.ButtonStyleKey}}" 

          FontStretch="Normal" Visibility="Visible" Padding="0" ToolTip="Close"/>
        <Label Content="TabItem"  HorizontalAlignment="Left" 

          Margin="4,3,0,0" x:Name="tab_title" VerticalAlignment="Top" 

          FontFamily="Courier" FontSize="12" />
    </Grid>
</UserControl>
